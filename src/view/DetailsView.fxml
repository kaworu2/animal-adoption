<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>


<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.DetailsController"
      spacing="10" alignment="CENTER" prefHeight="500" prefWidth="550" styleClass="background">
    
    <VBox  alignment="CENTER" spacing="5">
    <ImageView fx:id="logoView" fitWidth="500" fitHeight="200" preserveRatio="true">
    <image>
      <Image url="@../image/cat_banner.jpg"/>
    </image>
  </ImageView>
  </VBox>
   
    <Label fx:id="lblName" />
    <Separator orientation="HORIZONTAL" />
    <Label text="Adopted Animals:" styleClass="heading"/>

    <TableView fx:id="adoptedTable" styleClass="full-width-table">
    <columnResizePolicy>
    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colAdoptedDisplay"
                         text="Animal"
                         prefWidth="280" />
        </columns>
    </TableView>

   
    <Button fx:id="closebtn"
            text="Close"
            onAction="#handleClose"
            HBox.hgrow="ALWAYS" maxWidth="Infinity" />
    <stylesheets>
        <URL value="@style.css" />
  </stylesheets>
</VBox>