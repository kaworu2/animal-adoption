<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ManagerDashboardController"
      styleClass="background"
      spacing="10" alignment="TOP_CENTER"
      prefWidth="550" prefHeight="700">

 
  <fx:define>
    <ToggleGroup fx:id="filterGroup"/>
  </fx:define>

 
  <VBox  alignment="CENTER" spacing="5">
    <ImageView fx:id="managerView" fitWidth="550" fitHeight="300" preserveRatio="true">
      <image>
        <Image url="@../image/cat_banner.jpg"/>
      </image>
    </ImageView>
    <Label text="Manager Dashboard" styleClass="heading"/>
  </VBox>

  <Separator />
  
  <HBox  alignment="CENTER" HBox.hgrow="ALWAYS">
    <ToggleButton fx:id="allbtn"    text="All"    toggleGroup="$filterGroup" onAction="#handleFilter" styleClass="filter" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <ToggleButton fx:id="catbtn"    text="Cat"    toggleGroup="$filterGroup" onAction="#handleFilter" styleClass="filter" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <ToggleButton fx:id="dogbtn"    text="Dog"    toggleGroup="$filterGroup" onAction="#handleFilter" styleClass="filter" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <ToggleButton fx:id="rabbitbtn" text="Rabbit" toggleGroup="$filterGroup" onAction="#handleFilter" styleClass="filter" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
  </HBox>

  
  <TableView fx:id="animalTable"   VBox.vgrow="ALWAYS" styleClass="full-width-table">
  <columnResizePolicy>
    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
  </columnResizePolicy>
    <columns>
      <TableColumn fx:id="nameCol"   text="Name"   />
      <TableColumn fx:id="typeCol"   text="Type"   />
      <TableColumn fx:id="ageCol"    text="Age"    />
      <TableColumn fx:id="statusCol" text="Adoption Status" />
    </columns>
  </TableView>

  
  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
    <Button fx:id="listbtn" text="User List"     onAction="#handleUserList" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Button fx:id="addbtn" text="Add"    onAction="#handleAdd" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Button fx:id="removebtn" text="Remove" onAction="#handleRemove" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    <Button fx:id="closebtn" text="Close"    onAction="#handleClose" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
  </HBox>
<stylesheets>
        <URL value="@style.css" />
  </stylesheets>
</VBox>
