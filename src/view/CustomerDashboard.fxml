<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" fx:controller="controller.CustomerDashboardController" styleClass="background" prefWidth="550.0" xmlns:fx="http://javafx.com/fxml/1">
<VBox alignment="CENTER" spacing="5">
        <ImageView fx:id="managerView" fitWidth="550" preserveRatio="true">
            <image>
                <Image url="@../image/cat_banner.jpg"/>
            </image>
        </ImageView>
        <Label fx:id="lblWelcomeName" styleClass="heading"/>
    </VBox>

    <TableView fx:id="petsTable" VBox.vgrow="ALWAYS" styleClass="full-width-table">
    <columnResizePolicy>
    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
    </columnResizePolicy>
    <columns>
      <TableColumn fx:id="colPetDisplay" />
    </columns>
  </TableView>

   
    <HBox HBox.hgrow="ALWAYS" alignment="CENTER">
        <Button fx:id="detailbtn" text="My Details" onAction="#handleMyDetails" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button fx:id="btnAdopt"  text="Adopt"      onAction="#handleAdopt" disable="true" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        <Button fx:id="closebtn"  text="Close"       onAction="#handleLogout" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    </HBox>
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</VBox>